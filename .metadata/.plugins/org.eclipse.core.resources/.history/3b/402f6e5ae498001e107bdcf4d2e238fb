package com.bank.Service;
import com.bank.Entity.Banks;
import com.bank.Repo.BankRepo;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;


@Service
public class BankServiceImpl implements BankService {

	  @Autowired
	    private BankRepo repo;

	    @Override
	    public void processRegistration(Banks banks) {
	        // Implement your business logic here if needed
	        repo.save(banks);
	    }

		@Override
		public Banks updatecustomer(Banks bank) {
			
		Banks prbalance=repo.findById(bank.getAc()).get();
		
		
		int totbal=prbalance.getAmount()+bank.getAmount();
		
		
		bank.setAmount(totbal);
		
		
			Banks b=repo.save(bank);
		
		
			
			return bank;
		}
		
		@Override
		public Banks getcustomer(String account_number, String name, String password) {
			Banks getone=repo.findById(account_number).get();
		
			
			return getone;
		}
		
		@Override
		public Banks deposite(String taccount_number,int amount,Banks bank)
		{
			Banks getone=repo.findById(taccount_number).get();
			int tot=getone.getAmount()+amount;
			
			bank.setAmount(tot);
			return repo.save(bank);
		}
		
		@Override
		public Banks getCustomer(String Ac, String Name, String Password,int EmpId) {
			Banks getone=repo.findById(EmpId).get();
			
			
			return getone;
		}
		
	
	    

}
